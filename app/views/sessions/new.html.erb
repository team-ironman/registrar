
<div class="container">
	<div class="row">
		<div class="span8">
		<h1> Log In </h1> 
			<div class="well">
		<%= form_tag sessions_path do %>
			<div class="field">
				<%= label_tag :email %><br />
				<%= text_field_tag :email, params[:email] %>
			</div>
			<div class="field">
				<%= label_tag :password %><br />
				<%= password_field_tag :password %>
			</div>
			<div class="actions">
		    <%= submit_tag "Log In", :class => 'btn btn-primary btn-large' %>
    <% end %>
		  </div>
			</div>
		</div>
	</div>
</div>