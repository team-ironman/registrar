<%= form_for(@user) do |f| %>
  <ul>
<% @user.errors.full_messages.each do |error| %>
  <li><%= error %></li>
<% end %>
</ul>

<%= f.label :first_name %>
<%= f.text_field :first_name, :placeholder => 'Avi' %>

<%= f.label :last_name %>
<%= f.text_field :last_name, :placeholder => 'Flombaum' %>

<%= f.label :phone_number %>
<%= f.text_field :phone_number, :placeholder => '555-123-1234' %>

<%= f.label :email %>
<%= f.text_field :email, :placeholder => 'something@flatironschool.com'  %>

<%= f.label :treehouse_login %>
<%= f.text_field :treehouse_login, :placeholder => 'treehouse login'  %>

<%= f.label :codeschool_login %>
<%= f.text_field :codeschool_login, :placeholder => 'codeschool login'  %>

<%= f.label :password %>
<%= f.password_field :password, :placeholder => "password" %>        

<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation, :placeholder => "password" %>

<%= f.submit 'SUBMIT', :class => 'btn btn-warning btn-large' %>
<% end %>
