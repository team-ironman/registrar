$(function(){
	$('.ec-event-bg a').each(function() {
		$(this).click(function(event) {
			event.preventDefault()
			$.get($(this).attr('href'), function(data){
				$('.modal-body').append(data); // injecting the show html (modal) here
				$('#myModal').modal('toggle');	
			})	
		})
	})
})


 // --take a function, attach click handler to both of them so when this is called it'll attach to the right event ---